@model BL.GroupViewModel
@using Repositories
@inject IFacultyRepository _faculties;
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Create new group</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger">The Name field is required.</span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyId" class="control-label">Select Faculty</label>
                <select asp-for="FacultyId" class="form-control">
                    @foreach (var faculty in _faculties.AllItems)
                    {
                        <option value="@faculty.Id">@faculty.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
